<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

    <body>
        <%- include('partials/header') %>

            <main class="container">
                <div class="row">
                    <!-- empieza el formulario -->
                    <div class="col-12 col-md-8 mx-auto mt-5">
                        <div class="card shadow">
                            <div class="card-header">
                                <h4 class="card-title">Eliminar producto </h4>
                            </div>
                            <div class="card-body">
                                <% productos.forEach( producto => { %>
                      
                                    <tr>
                                        <td>
                                            <%= producto.id %>
                                        </td>
                                        <td>
                                            <%= producto.category  %>
                                        </td>
                                        <td>
                                            <%= producto.price %>
                                        </td>

                                        <td>
                                          
                                        </td>
                                    </tr>
                                    <form action="/products/remove/<%= producto.id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger">Eliminalo</button>
                                    </form>
                                   <% }) %>
                              
                            </div>

                        </div>
                    </div>
                </div>
            </main>


            <%- include('partials/footer') %>
    </body>

</html>