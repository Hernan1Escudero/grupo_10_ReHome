<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head',{title: "Perfil"}) %>


<body class="detalle">
    <%- include('partials/header') %>

    <main class="detalle__main">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                <div class="card mb-3 shadow-lg">
                  <div class="card-header">
                    Perfil usuario
                  </div>
                  <div class="card-body">
                    <form action="/users/update/<%= id %>?_method=PUT" method="POST" class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="name" placeholder="Tu nombre" name="name" value="<%= name %>">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label for="surname" class="form-label">Apellido</label>
                            <input type="text" class="form-control" id="surname" placeholder="Ingrese su apellido" name="surname" value="<%= surname %>">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label for="adress" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="adress" placeholder="Ingrese su domicilio" name="adress" value="<%=adress%>">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label for="city" class="form-label">Ciudad</label>
                            <input type="text" class="form-control" id="city" placeholder="Ingrese su ciudad" name="city" value="<%= city %>">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label for="province" class="form-label">Provincia</label>
                            <input type="text" class="form-control" id="province" placeholder="Ingrese su provincia" name="province" value="<%= province %>">
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label for="country" class="form-label">País</label>
                            <input type="text" class="form-control" id="country" placeholder="Ingrese su País" name="country" value="<%= country %>">
                        </div>
                        
                      
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-dark">Guardar cambios</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
</body>

</html>