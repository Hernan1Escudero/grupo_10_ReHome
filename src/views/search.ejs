<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/header') %>
			<!-- /Header -->

			<!-- Banner -->
			<div class="banner"></div>
			<!-- /Banner -->

			<!-- todos los productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Resultados de la búsqueda: <%= keywords%>
						</h2>
					</div>
					<% if(results.length){ %>
						<% results.forEach((product)=> { %>
							<article class="home__main__section__article" data-aos="zoom-in-right" data-aos-duration="500">
								<div class="home__main__section__article--box">
									<img class="home__main__section__article--image"
										src="/img/products/<%= product.image ? product.image : 'default-image.png' %>" alt="producto1">
									<a class="home__main__section__article--zoom" href="/products/detail/<%= product.id %>">Ver más info</a>
								</div>
								<h4 class="home__main__section__article--name">
									<%= product.name %>
								</h4>
								<p class="home__main__section__article--description">
									$<%= product.price %>
								</p>
							</article>
						<% }) %>
					<% }else{ %>
						<div class="col-12">
							<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
						</div>
					<% } %>
				</div>
			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>