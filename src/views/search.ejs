<!DOCTYPE html>
<html lang="es">
<%- include('partials/head', {title: 'Resultados de tu búsqueda' }) %>

	<body>
		<%- include('partials/header') %>
			<div class="container products-wrapper">
				<div class="row d-inline-flex p-2">
					<div class="col-12">
						<h2 class="products-title">Resultados de la búsqueda: "<%= keywords%>"
						</h2>
					</div>
					<% if(results.length){ %>
						<% results.forEach((product)=> { %>
							<%- include('partials/productCard', { ...product}) %>
						<% }) %>
					<% }else{ %>
						<div class="col-12">
							<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
						</div>
					<% } %>
				</div>
			</div>
			<%- include('partials/footer') %>
	</body>

</html>