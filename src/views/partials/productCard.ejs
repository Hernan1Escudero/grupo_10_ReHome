<section class="product-box">
    <a href="/products/<%= id %>">
        <figure class="product-box_image">
            <img src="/img/products/<%= image || 'default-image.png' %>" alt="imagen de producto">
        </figure>
        <article class="product-box_data">
            <h2>$<%= (price - (price * discount / 100)).toFixed(0)%></h2>
            <% if (discount) { %>
                <span><%= discount %> % OFF</span>
             <% } %>
            <p><%= name %></p>
            <i class="fas fa-truck"></i>
        </article>
    </a>
</section>