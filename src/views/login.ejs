<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: "Ingresar!"}) %>


<body class="detalle">
    <%- include('partials/header') %>

    <main id="home_main" class="home_main">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                <div class="card mb-3 shadow-lg">
                  <div class="card-header">
                    Ingresá
                  </div>
                  <div class="card-body">
                    <form action="" method="POST" class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Tu email" name="email">
                            <small class="text-danger ms-2">
                              <%= locals.errors && (errors.email && errors.email.msg) %>
                            </small>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" placeholder="Tu contraseña" name="password">
                            <small class="text-danger ms-2">
                              <%= locals.errors && (errors.password && errors.password.msg) %>
                            </small>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="remember" name="remember">
                                <label class="form-check-label" for="remember">
                                  Recordarme
                                </label>
                                
                            </div>
                            <label class="form-check-label d-flex gap-1" for="register">
                              ¿No tenés cuenta?<u class="ml-2 "> <a id="register" href="/users/register">Registrate Aquí</a></u >
                            </label>
                           
                            <button type="submit" class="btn btn-dark">Ingresá <i class="fa-solid fa-right-to-bracket"></i></button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>

</body>

</html>